<% include partials/header.ejs %>
<title>Add a new place</title>
</head>
<body>
<div id="new" >
    <div style="background: #d32323 url(https://s3-media4.fl.yelpcdn.com/assets/srv0/yelp_styleguide/c146b0884f6a/assets/img/structural/header_stars.png) no-repeat center;height: 70px;text-align: center;margin-bottom: 30px" class="logonav">
        <a href="/"><img width="110px" src="../images/Yelp_trademark_RGB.png" alt="Yelp Logo"></a>
    </div>
    <!--style="background: url('../images/food-pot-kitchen-cooking.jpg') no-repeat;background-position: center;background-size: cover;height: 100vh;"-->

    <div style="width: 50%;margin-bottom: 100px" class="ui container" id="newres">
        <h2 style="text-align: center;color: #d32323;">Add New Place</h2>
        <form action="/new" method="post" class="ui form" id="newresform">
            <div class="field">
                <label>Place Name</label>
                <input type="text" name="place" placeholder="First Name" required>
            </div>
            <div class="field">
                <label>Cover Image Source</label>
                <input type="text" name="source" placeholder="Image Source" required>
            </div>
            <div class="field">
                <label>Tags</label>
                <input type="text" name="tags" placeholder="Tags(Seperated by ,)">
            </div>
            <div class="field">
                <label>Address</label>
                <input type="text" name="address" placeholder="Address" required>
            </div>

            <div class="field">
                <label>Description</label>
                <textarea type="text" name="description" placeholder="Description" required rows="3"></textarea>
            </div>

            <div class="two fields">
                <div class="field">
                    <label>Phone Number</label>
                    <input type="text" name="number" placeholder="Phone Number" required>
                </div>
                <div class="field">
                    <label>Website(if any)</label>
                    <input type="text" name="website" placeholder="Address">
                </div>
            </div>

            <div class="two fields">
                <div class="field">
                    <label>Latitude</label>
                    <input type="text" name="lat" placeholder="Latitude" >
                </div>
                <div class="field">
                    <label>Longitude</label>
                    <input type="text" name="long" placeholder="Longitude">
                </div>
            </div>

            <button id="newresbtn" class="ui button" type="submit">Submit</button>
        </form>
    </div>
</div>














